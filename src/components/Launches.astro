---
import CardLaunch from './CardLaunch.astro'
import { getLatestLaunches } from '../services/launch.service'

const launches = await getLatestLaunches()
---

<div class='grid gap-8 sm:grid-cols-2 lg:grid-cols-3'>
  {
    launches.map(
      ({ id, links: img, success, flight_number: flightNumber, details }) => (
        <CardLaunch
          id={id}
          img={img.patch.small}
          success={success}
          flightNumber={flightNumber}
          details={details}
        />
      )
    )
  }
</div>
